{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2016",
    "outDir": "dist",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2020",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "declaration": true,
    "declarationDir": "dist",
    "noImplicitAny": true,
    "typeRoots": ["./types/custom.d.ts"],
    "baseUrl": ".",
    "paths": {
      "@components/base/*": ["./stories/components/base/*"],
      "@components/custom/*": ["./stories/components/custom/*"]
    }
  }
}
